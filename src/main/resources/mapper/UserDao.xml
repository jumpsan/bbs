<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.bbs.dao.UserDao">

    <resultMap type="com.example.bbs.entity.User" id="TUserMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="registerTime" column="register_time" jdbcType="TIMESTAMP"/>
        <result property="introduce" column="introduce" jdbcType="VARCHAR"/>
        <result property="image" column="image" jdbcType="VARCHAR"/>
    </resultMap>

    <!--根据账号查询-->
    <select id="selectUserById" resultMap="TUserMap">
        select
        id, username, password, register_time, introduce, image
        from bbs.t_user
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="selectUserByIdAndPassword" resultMap="TUserMap">
        select
        id, username, password, register_time, introduce, image
        from bbs.t_user
        where id=#{id} and password=#{password}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TUserMap">
        select
        id, username, password, register_time, introduce, image
        from bbs.t_user
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="registerTime != null">
                and register_time = #{registerTime}
            </if>
            <if test="introduce != null and introduce != ''">
                and introduce = #{introduce}
            </if>
            <if test="image != null and image != ''">
                and image = #{image}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="addUser" keyProperty="id" useGeneratedKeys="true">
        insert into bbs.t_user(username, password, register_time, introduce, image)
        values (#{username}, #{password}, #{registerTime}, #{introduce}, #{image})
    </insert>

    <!--通过主键修改数据-->
    <update id="updateUserById">
        update bbs.t_user
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="registerTime != null">
                register_time = #{registerTime},
            </if>
            <if test="introduce != null and introduce != ''">
                introduce = #{introduce},
            </if>
            <if test="image != null and image != ''">
                image = #{image},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteUserById">
        delete from bbs.t_user where id = #{id}
    </delete>

</mapper>